<div class="auth-container">
  <div class="auth-card">
    <h2>Forgot Password</h2>
    <p>Enter your email address, and we'll send you instructions to reset your password.</p>

    <%= form_with model: resource, as: resource_name, url: password_path(resource_name), local: true do |form| %>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, autofocus: true, class: "input-field" %>
      </div>

      <div class="form-actions">
        <%= form.submit "Send Reset Instructions", class: "auth-btn" %>
      </div>
    <% end %>

    <div class="extra-links">
      <%= link_to "Back to Sign In", new_session_path(resource_name), class: "link-text" %>
    </div>
  </div>
</div>
