<div class="book-details">
  <div class="book-card">
    <h1><%= @book.title %></h1>
    <p><strong>Author:</strong> <%= @book.author %></p>
    <p><strong>ISBN:</strong> <%= @book.isbn %></p>
    <p><strong>Status:</strong> <%= @book.available? ? "Available ✅" : "Borrowed ❌" %></p>

    <% if @book.available? %>
      <%= button_to "Borrow", borrow_book_path(@book), method: :post, class: "borrow-btn" %>
    <% else %>
      <p class="borrowed-message">This book is currently borrowed.</p>
    <% end %>

    <%= link_to "Back to Books", books_path, class: "back-btn" %>
  </div>
</div>
