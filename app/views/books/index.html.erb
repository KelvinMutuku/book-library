<h1>Books</h1>

<% if @books.present? %>
  <ul>
    <% @books.each do |book| %>
      <li>
        <%= link_to book.title, book_path(book) %>  
        (<%= book.available? ? "Available ✅" : "Borrowed ❌" %>)
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No books available. Please check back later.</p>
<% end %>
