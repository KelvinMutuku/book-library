<h1>Books</h1>

<% if @books.present? %>
  <div class="books-grid">
    <% @books.each do |book| %>
      <div class="book-card">
        <h3><%= link_to book.title, book_path(book) %></h3>
        <p><strong>Author:</strong> <%= book.author %></p>
        <p><strong>ISBN:</strong> <%= book.isbn %></p>
        <p><strong>Status:</strong> <%= book.available? ? "Available ✅" : "Borrowed ❌" %></p>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No books available. Please check back later.</p>
<% end %>
