<h1>Admin Panel</h1>

<p>Welcome, <%= current_user.email %>! (<%= link_to "Logout", destroy_user_session_path, method: :delete %>)</p>

<h2>Manage Books</h2>

<%= link_to "Add New Book", new_admin_book_path, class: "btn btn-primary" %>

<ul>
  <% @books.each do |book| %>
    <li>
      <strong><%= book.title %></strong> by <%= book.author %>
      <%= button_to "Delete", admin_book_path(book), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
