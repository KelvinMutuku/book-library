<div class="profile-container">
  <div class="profile-card">
    <h2>Admin Profile</h2>

    <p><strong>Email:</strong> <%= current_user.email %></p>

    <h3>Update Profile</h3>
    <%= form_with model: @user, url: admin_update_profile_path, method: :patch, local: true do |form| %>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, class: "input-field", placeholder: "Enter new email" %>
      </div>

      <div class="form-group">
        <%= form.label :password %> (leave blank to keep current password)
        <%= form.password_field :password, class: "input-field", placeholder: "Enter new password" %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation %>
        <%= form.password_field :password_confirmation, class: "input-field", placeholder: "Confirm new password" %>
      </div>

      <div class="form-actions">
        <%= form.submit "Update Profile", class: "form-btn primary-btn" %>
        <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "form-btn danger-btn" %>
      </div>
    <% end %>

    <%= link_to "Back to Admin Panel", admin_dashboard_path, class: "form-btn secondary-btn" %>
  </div>
</div>
