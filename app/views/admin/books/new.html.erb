<div class="form-container">
  <div class="form-card">
    <h2>Add a New Book</h2>

    <%= form_with model: @book, url: admin_books_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "input-field", placeholder: "Enter book title" %>
      </div>

      <div class="form-group">
        <%= form.label :author %>
        <%= form.text_field :author, class: "input-field", placeholder: "Enter author's name" %>
      </div>

      <div class="form-group">
        <%= form.label :isbn %>
        <%= form.text_field :isbn, class: "input-field", placeholder: "Enter ISBN number" %>
      </div>

      <div class="form-group checkbox-group">
        <%= form.label :available, "Available" %>
        <%= form.check_box :available, class: "checkbox-input" %>
      </div>

      <div class="form-actions">
        <%= form.submit "Add Book", class: "form-btn primary-btn" %>
        <%= link_to "Back to Manage Books", admin_books_path, class: "form-btn secondary-btn" %>
      </div>
    <% end %>
  </div>
</div>
