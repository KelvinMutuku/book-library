<h1>Add a New Book</h1>

<%= form_with model: @book, url: admin_books_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :author %><br>
    <%= form.text_field :author %>
  </p>

  <p>
    <%= form.label :isbn %><br>
    <%= form.text_field :isbn %>
  </p>

  <p>
    <%= form.submit "Add Book" %>
  </p>
<% end %>

<%= link_to "Back to Admin Dashboard", admin_dashboard_path %>
